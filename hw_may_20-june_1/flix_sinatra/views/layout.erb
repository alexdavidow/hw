<html>
	<head>
		<link rel='stylesheet' href='/bootstrap/css/bootstrap.css'>
			<link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
			<script src='/js/jquery-2.0.1.min.js'></script>
			<script src='/bootstrap/js/bootstrap.js'></script>
		</head>
		<body>
			<div id="container">
				<div class="row">
					<div class="span6">
						<div class="navbar">
							<div class="navbar-inner">
								<div class="btn-group">
									<button class="btn btn-large"><a href="/">Home</a></button>
									<a class="btn btn-large dropdown-toggle" data-toggle="dropdown" href="/videos">Videos<span class="caret"></span></a>
									<ul class="dropdown-menu">
										<li><a href="/videos">All Videos</a></li>
										<% array_genres = [] %>
										<% @rows.each do |row| %>
										<% array_genres << row["genre"] if !array_genres.include?(row["genre"]) %>
										<% end %>
										<% array_genres.each do |genre| %>

										<li><a href="/videos/<%= genre %>"><%= genre %></a></li>
										<% end %>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>


				<div class="row">

					<div class="span6">
						<%= yield %>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
